require('steal');

steal('steal/build',
	  'steal/build/scripts',
	  'steal/build/styles', 
	  'steal/build/apps', 
	  
function () {
    //check if args
    var urls = [];
    while (steal.args.length) {
        if (steal.args[0].indexOf('-') !== 0) {
            urls.push(steal.args.shift());
        } else {
            break;
        }
    }

    if (urls.length > 1) {
        steal.build.apps(urls);
    } else {
        steal.build(urls[0], steal.args);
    }

});